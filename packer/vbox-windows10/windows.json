{
  "variables": {
    "iso_md5": "C5BF8CC6238F5398AEF04D9465521D84",
    "iso_path": "C:/tiny10 21H2 x64 beta 1.iso"
  },
  
  "builders": [
    {
      "communicator": "winrm",
      "disk_size": 61440,
      "floppy_files": [
        "Autounattend.xml",
        "configure-winrm.ps1"
      ],
      "guest_additions_mode": "upload",
      "guest_additions_path": "c:/Windows/Temp/windows.iso",
      "guest_os_type": "Windows10_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "iso_checksum": "md5:{{user `iso_md5`}}",
      "iso_interface": "sata",
      "iso_url": "{{user `iso_path`}}",
      "shutdown_command": "shutdown /s /t 0 /f /d p:4:1 /c \"Packer Shutdown\"",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "32"
        ]
      ],
      "winrm_insecure": true,
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "winrm_username": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/enable-rdp.ps1",
        "./scripts/disable-hibernate.ps1",
        "./scripts/disable-autologin.ps1",
        "./scripts/disable-uac.ps1",
        "./scripts/no-expiration.ps1",
        "./scripts/install-choco.ps1",
        "./scripts/install-sysmon.ps1",
        "./scripts/install-pwshssh.ps1",
        "./scripts/install-advaudit.ps1",
        "./scripts/disable-windef.ps1",
        "./scripts/fix-invokeweb-secure-channel.ps1",
        "./scripts/cleanout.ps1",
        "./scripts/debloater.ps1"
      ],
      "type": "powershell"
    },
    {
      "scripts": [
        "./scripts/cleanup.ps1"
      ],
      "type": "powershell"
    }
  ],
  "post-processors": [
      {
        "type": "vagrant",
        "compression_level": "8",
        "output": "../_output/{{.Provider}}-dev-windows10-{{timestamp}}.box"
      }
  ]
}
